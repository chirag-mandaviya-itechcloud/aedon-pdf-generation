<apex:page controller="EmailTemplateToPDFController" renderAs="pdf" 
           applyBodyTag="false" showHeader="false" sidebar="false" standardStylesheets="false">
    <head>
        <style>
            @page {
                size: A4;
                margin-left: 1cm;
                margin-right: 1cm;
                
                @top-center { content: element(header); }
                @bottom-center { content: element(footer); }
            }

            /* RESET */
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            
            body { 
                font-family: Arial, sans-serif;
                font-size: 11px;
                line-height: 1.4;
                color: #333;
            }
            .header {
                position: running(header);
                display: block;
            }
            
            .footer {
                position: running(footer);
                display: block;
            }
            
            .page-number:before {
                content: "Page " counter(page) " of " counter(pages);
            }
            .content {
                width: 100%;
            }
            
            .page-break { 
                page-break-after: always; 
            }
        </style>
    </head>
    
    <body>
        <!--
        <apex:outputPanel rendered="{!hasHeader}">
            <div class="header">
                <apex:outputText value="{!headerHtml}" escape="false"/>
            </div>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!hasFooter}">
            <div class="footer">
                <apex:outputText value="{!footerHtml}" escape="false"/>
            </div>
        </apex:outputPanel>
		-->

        <div class="content">
            <apex:outputText value="{!templateHtml}" escape="false"/>
        </div>
    </body>
</apex:page>